{
    "version": "0.2.0",
    "configurations": [
      {
        "name": "Flask (Poetry)",
        "type": "debugpy",
        "request": "launch",
        "module": "flask",
        "pythonPath": "${workspaceFolder}/api/.venv/bin/python",
        "cwd": "${workspaceFolder}/api/",
        "env": {
          "FLASK_APP": "app.py",
          "FLASK_ENV": "development"
        },
        "args": [
          "run",
          "--host=0.0.0.0",
          "--port=5001",
          "--debug"
        ],
        "console": "integratedTerminal",
        "jinja": true
      }
    ]
  }
  